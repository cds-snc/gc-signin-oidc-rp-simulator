{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Simple RP Simulator",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/simple-rp-simulator/server.js",
            "cwd": "${workspaceFolder}/simple-rp-simulator",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/rp-server.ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}